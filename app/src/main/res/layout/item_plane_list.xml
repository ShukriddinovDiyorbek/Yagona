<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_plane"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.6"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UzAirways"
                android:textColor="@color/grey"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="18:45"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/black"/>

                    <TextView
                        android:id="@+id/tv_finish_time"
                        android:layout_width="60dp"
                        android:gravity="end"
                        android:layout_height="wrap_content"
                        android:text="20:45"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_palce_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Toshkent"/>

                    <TextView
                        android:id="@+id/tv_place_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Samarqand"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="top|end">

                <TextView
                    android:id="@+id/tv_time_spend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 soat 40 min"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#7CB2E3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/tv_unloaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yuksiz"
                        android:textColor="@color/darker_grey"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="10sp"/>

                    <ImageView
                        android:id="@+id/iv_refresh"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/tv_unloaded"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_refresh"/>

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 000 000 so'm"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_unloaded"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/center_color"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#7CB2E3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/iv_baggage"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_20_kg"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_luggage"/>

                    <TextView
                        android:id="@+id/tv_20_kg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 kg"
                        android:textColor="@color/darker_grey"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_baggage"
                        app:layout_constraintEnd_toStartOf="@id/iv_refresh_2"
                        android:textSize="10sp"/>

                    <ImageView
                        android:id="@+id/iv_refresh_2"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="2dp"
                        app:layout_constraintStart_toEndOf="@id/tv_20_kg"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/ic_refresh"/>

                    <TextView
                        android:id="@+id/tv_money_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 500 000 so'm"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_baggage"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/center_color"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#7CB2E3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/iv_baggage_3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_40_kg"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_luggage"/>

                    <TextView
                        android:id="@+id/tv_40_kg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 kg"
                        android:textColor="@color/darker_grey"
                        app:layout_constraintStart_toEndOf="@id/iv_baggage_3"
                        app:layout_constraintEnd_toStartOf="@id/iv_refresh_3"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="10sp"/>

                    <ImageView
                        android:id="@+id/iv_order_3"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="2dp"
                        app:layout_constraintStart_toEndOf="@id/tv_40_kg"
                        app:layout_constraintEnd_toStartOf="@id/iv_refresh_3"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_orders"/>

                    <ImageView
                        android:id="@+id/iv_refresh_3"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="2dp"
                        app:layout_constraintStart_toEndOf="@id/iv_order_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_refresh"/>

                    <TextView
                        android:id="@+id/tv_money_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 500 000 so'm"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_baggage_3"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/center_color"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
