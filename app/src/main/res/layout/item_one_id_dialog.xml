<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:background="@drawable/rounded_view"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="One ID"
        android:textAlignment="center"
        android:textColor="@color/center_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColorHint="@color/darker_grey"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/darker_grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvOneIDLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Loginni kiriting"
            android:inputType="text"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColorHint="@color/darker_grey"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/darker_grey"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/darker_grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvOneIDPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parolni kiriting"
            android:inputType="text"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <CheckBox
            android:id="@+id/checkboxPrivilege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imtiyozlar"
            android:textColor="@color/black"
            android:theme="@style/WhiteCheck" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerPrivilege"
            style="@style/Spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:backgroundTint="@color/black"
            android:popupBackground="@color/white"
            android:popupTheme="@style/Spinner"
            android:visibility="gone" />


    </LinearLayout>

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_gradient"
        android:text="Kirish" />

</LinearLayout>