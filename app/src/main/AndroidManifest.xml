<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uz.transport.yagonatransportchiptasi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YagonaTransportChiptasi">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.TicketActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.ToActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.FromActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.CalendarActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>